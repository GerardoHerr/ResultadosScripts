abstract = {The conversion efficiency of scientific and technological achievements in China's universities is relatively low. Analysis and evaluation of the conversion efficiency of scientific and technological achievements in universities can find problems and propose suggestions for improvement. This article establishes a model for evaluating the conversion efficiency of scientific and technological achievements in universities based on the DEA method, and analyzes 42 universities in Guangdong Province as cases. The research results show that the efficiency evaluation model for the transformation of scientific and technological achievements of universities is an effective DEA efficiency measurement model. The overall efficiency of the transformation of scientific and technological achievements of universities in Guangdong Province is not high. Only 7 of 42 universities are DEA effective. The average pure technical efficiency of 211 universities is 0.935, which is higher than the non-211 universities of 0.584, but the scale efficiency of 42 universities is lower than 0.5. In addition, the transformation of scientific and technological achievements in universities in Guangdong Province has problems of redundant investment in R&amp;D personnel and insufficient income from technology transfer.},
booktitle = {2021 4th International Conference on Information Systems and Computer Aided Education},
pages = {1933–1940},
numpages = {8},
location = {Dalian, China},
series = {ICISCAE 2021}
}

@inproceedings{10.1145/3638067.3638128,
