articleno = {23},
numpages = {12},
keywords = {Digital games, Gamified systems, Internet of Things, IoT games},
location = {Macei\'{o}, Brazil},
series = {IHC '23}
}

@inproceedings{10.1145/3570361.3613264,
author = {Iizuka, Tatsuya and Sasatani, Takuya and Nakamura, Toru and Kosaka, Naoko and Hisada, Masaki and Kawahara, Yoshihiro},
title = {MilliSign: mmWave-Based Passive Signs for Guiding UAVs in Poor Visibility Conditions},
year = {2023},
